{
  "manifest_version": 2,
  "name": "Audio Descriptions",
  "description": "Extension adding descriptions to live videos.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scd.min.js",
        "background.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
