{
  "manifest_version": 2,
  "name": "Audio Descriptions",
  "description": "Extension adding descriptions to live videos.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/scd.min.js",
        "content/main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_icon": "popup/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
